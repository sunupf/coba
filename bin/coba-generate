#!/usr/bin/env node

(function(){
  var program = require('commander');
  var fs = require('fs-extra');
  var path = require('path');
  var validate = require('../lib/validation');
  var errors = require('../lib/errors');
  var gInput = require('../lib/gInput');

  program
    .version('0.0.1')
    .usage('<type>')
    .on('--help', function() {
      require('../help/generate')
    });

  program.parse(process.argv);

  if(program.args.length < 1){
    console.log('You need to specify type of generation')
  }else if(program.args.length === 1 && program.args[0] === 'help'){
    console.log('  Help : coba init -h')
    console.log();
    require('../help/generate')
  }else{
    var args = program.args;
    for(i=0;i<args.length;i++){
      var config = require(process.cwd()+'/config');
      switch(args[i]){
        case 'input' :
          if(validate.isAlphaNumericUnderscore(args[i])){
            try{
              // get config on current directory
              console.log(config);
              if(config.input){
                var gData = gInput.generateInputRecord(config.input);
              }
              fs.writeJson(process.cwd()+'/'+config.data, gData, function (err) {
                if (err) return console.error(err)
                console.log('Input has been generated and stored at '+config.data)
              })
            }catch(e){
              console.log(e.message);
            }
          }else{
            errors.isAlphaNumericUnderscore(args[i])
          }
          break;
        case 'output' :
          if(validate.isAlphaNumericUnderscore(args[i])){
            try{
              // get config on current directory
              var inputs = require(process.cwd()+'/'+config.data);

              if(inputs){
                var gData = gInput.generateOutputResults(inputs,config.input);
                // console.log(gData);
              }
              fs.writeJson(process.cwd()+'/'+config.data, gData, function (err) {
                if (err) return console.error(err)
                console.log('Output has been generated and stored at '+config.data)
              })
            }catch(e){
              console.log(e.message);
            }
          }else{
            errors.isAlphaNumericUnderscore(args[i])
          }
          break;
      }
    }
  }
}).call(this)
